# Snapix Server Environment Variables

# Application
NODE_ENV=production
PORT=5001

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/snapix?retryWrites=true&w=majority

# Facebook OAuth
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_at_least_32_characters_long
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_different_from_jwt_secret

# Session
SESSION_SECRET=your_super_secure_session_secret_for_express_sessions

# Client Configuration
CLIENT_URL=https://your-app-name.onrender.com

# Optional: n8n Integration
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/snapix